server{
    server_name mrcarpet.shop;
    client_max_body_size 100M;
    location = /favicon.ico { access_log off; log_not_found off; }
    location /media {
        alias /home/carpet/projects/carpet/src/media;
    }
    location /static {
        alias /home/carpet/projects/carpet/src/static_root;
    }
    location / {
        uwsgi_pass unix:/home/carpet/projects/carpet/src/config/mrcarpet.sock;
        include /etc/nginx/uwsgi_params;
    }



    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/mrcarpet.shop/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/mrcarpet.shop/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server{
    if ($host = mrcarpet.shop) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    server_name mrcarpet.shop;
    listen 80;
    return 404; # managed by Certbot


}